<div class="form-container">
  <h2>Log in（ログイン）</h2>

<div class="devise">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, 'Email（メールアドレス）' %>
      <span class="required-label">必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, 'Password（パスワード）' %>
      <span class="required-label">必須</span><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Remember me（ログイン状態を保持）' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in（ログイン）", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
